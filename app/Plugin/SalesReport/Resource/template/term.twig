{% extends 'SalesReport/Resource/template/index.twig' %}

{% set report_title = '期間別集計' %}
{% set action = url('admin_sales_report_term') %}
{% set menus = ['admin_sales_report', 'admin_sales_report'] %}

{% block chart %}
    <script>
        var graphData = {{ graphData|raw }};
        var LineChart = new Chart(ctx).Line(graphData);
    </script>
{% endblock %}

{% block option %}
<div class="form-group">
    {{ form_label(form.unit) }}
    <div class="col-sm-9 col-lg-9">
        {{ form_widget(form.unit) }}
        {{ form_errors(form.unit) }}
    </div>
</div>
{% endblock %}

{% block table %}
    {% if app.request.method == 'POST' %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body no-header no-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>期間</th>
                                    <th>購入件数</th>
                                    <th>購入合計</th>
                                    <th>購入平均</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for date, row in rawData %}
                                    <tr>
                                        <td>{{ date }}</td>
                                        <td>{{ row.time|number_format }}</td>
                                        <td>{{ row.price|price }}</td>
                                        <td>
                                            {% if row.time > 0 %}
                                                {{ (row.price / row.time)|round(2, 'floor')|price }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
    {% endif %}
{% endblock %}